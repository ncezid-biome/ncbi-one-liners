#! /bin/sh

here="$(dirname $0)/.."
if [[ "$GITHUB_WORKSPACE" != "" ]]; then
  here="$GITHUB_WORKSPACE"
fi

echo "The project directory is at $here"

testEquality() {
  assertEquals 1 1
}

testEdirectE() {
  assertTrue "[ -e '$here/lib/edirect/esearch' ]"
}
testEdirectR() {
  assertTrue "[ -r '$here/lib/edirect/esearch' ]"
}
testEdirectX() {
  assertTrue "[ -x '$here/lib/edirect/esearch' ]"
}

